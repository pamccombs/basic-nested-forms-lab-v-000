<%= form_for @recipe do |r| %>
  <%= r.label :title %>
  <%= r.text_field :title %><br>


  <%= r.fields_for :ingredients do |ingr| %>
      <%= ingr.label :quantity %>
      <%= ingr.text_field :quantity %><br>

      <%= ingr.label :name %>
      <%= ingr.text_field :name %><br>

  <% end %>
 <%= link_to 'add ingredient', @recipe %>
  <%= r.submit %>
<% end %>